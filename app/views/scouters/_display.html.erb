@charset "UTF-8";
@import url(https://fonts.googleapis.com/css?family=Open+Sans:300,400,700);

body {
  font-family: 'Open Sans', sans-serif;
  font-weight: 300;
  line-height: 1.42em;
  color:#A7A1AE;
  background-color:#000;
}

h1 {
  font-size:3em;
  font-weight: 300;
  line-height:1em;
  text-align: center;
  color: #4DC3FA;
}

h2 {
  font-size:18px;
  font-weight: 300;
  text-align: center;
  display: block;
  line-height:1em;
  color: #FB667A;
}

h2 a {
  font-weight: 700;
  text-transform: uppercase;
  color: #FB667A;
  text-decoration: none;
}

.blue { color: #185875; }
.yellow { color: #FFF842; }

.container th h1 {
	  font-weight: bold;
	  font-size: 1em;
  text-align: left;
  color: #e39400;
}

.container td {
	  font-weight: normal;
	  font-size: 1em;
  -webkit-box-shadow: 0 2px 2px -2px #0E1119;
	   -moz-box-shadow: 0 2px 2px -2px #0E1119;
	        box-shadow: 0 2px 2px -2px #0E1119;
}

.container {
	  text-align: left;
	  overflow: hidden;
	  width: 60%;
	  margin: 0 auto;
  display: table;
  padding: 0 0 8em 0;
}

.container td, .container th {
	  padding-bottom: 2%;
	  padding-top: 2%;
  padding-left:2%;
}

/* Background-color of the odd rows */
.container tr:nth-child(odd) {
	  background-color: #323C50;
}

/* Background-color of the even rows */
.container tr:nth-child(even) {
	  background-color: #2C3446;
}

.container th {
	  background-color: #1F2739;
}

.container td:first-child { color: #FB667A; }



@media (max-width: 800px) {
.container td:nth-child(4),
.container th:nth-child(4) { display: none; }
}
</style>
</head>
<body>
<h1 style = "color:white">DOTA 2 Draft Planner</h1>
<h2 style = "color: #877c78;">Displaying all available and relevant stats for your draft</h2><br><br>

<!-- team table -->
<% if @scouter.team.present?%>
<h2 style = "blue"><a href="<%= @scouter.team %>/heroes" target="_blank"><%= name_scraper(@scouter.team) %>'s Match History</a></h2>
<table class="container">
	<thead>
		<tr>
			<th><h1>Hero</h1></th>
			<th><h1>Times Picked Overall</h1></th>
			<th><h1>Win Rate</h1></th>
		</tr>
	</thead>
	<tbody>
              <% team_arr = esports_team_scraper(@scouter.team) %>
              <% team_arr.each do |listing| %>
    		<tr>
    			<td><%= listing[:hero] %></td>
    			<td><%= listing[:times_picked] %></td>
    			<td><%= (listing[:win_percentage].tr('%', '')).to_i %>%</td>
    		</tr>
            <% end %>
	</tbody>
</table>
<% end %>

<!-- first player table -->
<% if @scouter.player1.present?%>
<h2 style = "blue"><a href="<%= @scouter.player1 %>/matches" target="_blank"><%= name_scraper(@scouter.player1) %>'s Recent Match History</a></h2>
<table class="container">
	<thead>
		<tr>
			<th><h1>Hero</h1></th>
			<th><h1>Times Picked In Last 50 Games</h1></th>
			<th><h1>Win Rate</h1></th>
		</tr>
	</thead>
	<tbody>
              <% team_arr = recent_games_scraper(@scouter.player1) %>
              <% team_arr.each do |listing| %>
                    <% if listing[:total_games] >= 2 %>
    		        <tr>
            			<td><%= listing[:hero] %></td>
            			<td><%= listing[:total_games] %></td>
            			<td><%= (listing[:percentage]*100).round(0) %>%</td>
    		        </tr>
                    <% end %>
            <% end %>
	</tbody>
</table>
<% end %>

