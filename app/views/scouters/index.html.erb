<head>
      <style>
         table, th, td {
            border: 1px solid black;
         }
         th, td {
           padding: 10px;
         }
         td {
             overflow: hidden;
             text-overflow: ellipsis;
             word-wrap: break-word;
         }
         table {
             table-layout:fixed;
         }
         @media only screen and (max-width: 480px) {
             /* horizontal scrollbar for tables if mobile screen */
             .tablemobile {
                 overflow-x: auto;
                 display: block;
             }
         }
      </style>
   </head>

<p id="notice"><%= notice %></p>

<h1>Scouting History</h1>

<table width="100%">
  <thead>
    <tr>
      <th>Team</th>
      <th>Player1</th>
      <th>Player2</th>
      <th>Player3</th>
      <th>Player4</th>
      <th>Player5</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @scouters.each do |scout| %>
      <tr>
        <td><%= scout.team %></td>
        <td><%= scout.player1 %></td>
        <td><%= scout.player2 %></td>
        <td><%= scout.player3 %></td>
        <td><%= scout.player4 %></td>
        <td><%= scout.player5 %></td>
        <td><%= link_to 'Show', scout %></td>
        <td><%= link_to 'Edit', edit_scouter_path(scout) %></td>
        <td><%= link_to 'Destroy', scout, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<b>Total times application used: <%= @scouters.count %> </b>

<br><br>

<%= link_to 'New Scouter', new_scouter_path %>
